{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [
      "'error', process.platform === 'win32' ? 'windows' : 'unix'"
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
